<div id="page-wrapper">
  <div id="page-inner">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-default">
          <div class="panel-heading">
             Product Lists
          </div>
          <div class="panel-body">
            <div class="table-responsive">

              <table class="table table-striped table-bordered table-hover">
                <tr>
                  <th>Title</th>
                  <th>Description</th>
                  <th>Price</th>
                  <th>Brand Name</th>
                  <th>Part Name</th>
                  <th>Uniq code:</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>

              <% @products.each do |product| %>
                <tr>
                  <td><%= product.title %></td>
                  <td><%= product.description %></td>
                  <td><%= product.price %></td>
                  <td><%= product.brand_id %></td>
                  <td><%= product.part_number %></td>
                  <td><%= product.try(:uniq_code) %></td>
                  <td><%= link_to 'Show', webmaster_product_path(product) %></td>
                  <% if current_user.role == 'super_admin'%>
                    <td><%= link_to 'Edit', edit_webmaster_product_path(product) %></td>
                  <% end %>
                  <td><%= link_to 'Destroy', webmaster_product_path(product), confirm: 'Are you sure?', method: :delete %></td>
                </tr>
              <% end %>
              </table>
            </div>
            <%= link_to 'New', new_webmaster_product_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>