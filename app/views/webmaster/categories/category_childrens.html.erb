<div id="page-wrapper">
  <div id="page-inner">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-default">
          <div class="panel-heading">
            <span> Category Lists </span>
            <%= link_to 'New', new_webmaster_category_path, class: 'pull-right' %>
          </div>
          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover">
                <tr>
                  <th>Parent</th>
                  <th>First children</th>
                  <th>Second children</th>
                  <th>Third children</th>
                </tr>

                <% @parent_category.order(:name).each do |category| %>
                  <tr>
                    <td><%= category.name %></td>
                    <td></td>
                    <td></td>
                    <td></td>
                      <% category.children.order(:name).each do |sub| %>
                        <tr>
                          <td></td>
                          <td><%= sub.name %></td>
                          <td></td>
                          <td></td>
                          <% sub.children.order(:name).each do |ch|%>
                            <tr>
                              <td></td>
                              <td></td>
                              <td><%= ch.name %></td>
                              <% ch.children.order(:name).each do |c|%>
                                <tr>
                                  <td></td>
                                  <td></td>
                                  <td></td>
                                  <td><%= c.name %></td>
                                </tr>
                              <% end %>
                             </tr>
                          <% end %>
                        </tr>
                      <% end %>
                  </tr>
                <% end %>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>