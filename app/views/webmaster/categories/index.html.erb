<div id="page-wrapper">
  <div id="page-inner">
    <div class="row">
      <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="panel panel-default">
          <div class="panel-heading">
             Category Lists
          </div>
          <div class="panel-body">
            <div class="table-responsive">

              <table class="table table-striped table-bordered table-hover">
                <tr>
                  <th>Name</th>
                  <th>Parent</th>
                  <th></th>
                  <th></th>
                  <th></th>
                </tr>

              <% @categories.each do |category| %>
                <tr>
                  <td><%= category.name %></td>
                  <td><%= category.parent.try(:name) %></td>
                  <td><%= link_to 'Show', webmaster_category_path(category) %></td>
                  <td><%= link_to 'Edit', edit_webmaster_category_path(category) %></td>
                  <td><%= link_to 'Destroy', webmaster_category_path(category), confirm: 'Are you sure?', method: :delete %></td>
                </tr>
              <% end %>
              </table>
            </div>
            <%= link_to 'New', new_webmaster_category_path %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>