<div class="banner-section">
  <%= image_tag "inner-banner.jpg" %>
</div>
<div class="bread-crumb">
	<a href="#" class="bread-c-link">Home</a>
    <span class="bread-c-arrow bread-c-red-arrow"> &raquo;</span>
    <span class="bread-c-link">Register</span>
	<span class="clr"></span>
</div>
<div class="container-fluid">
  <div class="row-fluid">
    <%= render "shared/add_bar" %>
    <div class="span9">
      <div class="heading-box">
        <h2 class="heading-text pull-left">
        	Registration Form
        </h2>
        <span class="clr"></span>
      </div>
      <div class="registration-form margin-top64PX">
        <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :post }) do |f| %>
          <div class="span12">
            <%= devise_error_messages! %>
          </div>
          <div class="registration-form-box">
            <div class="form-item">
              <label><span class="req">*</span>First Name</label>
              <%= f.text_field :first_name %>
            </div>
            <div class="form-item">
              <label><span class="req">*</span>Last Name </label>
              <%= f.text_field :last_name %>
            </div>
            <div class="form-item">
              <label><span class="req">*</span>Company Name</label>
              <%= f.text_field :company_name %>
            </div>
            <span class="clr"></span>
          </div>
          <div class="registration-form-box">
          	<div class="form-item">
              <label><span class="req">*</span>Phone </label>
              <%= f.text_field :phone %>
            </div>
            <div class="form-item">
              <label><span class="req">*</span>Mobile </label>
              <%= f.text_field :mobile %>
            </div>
            <div class="form-item">
              <label><span class="req">*</span>Contact Number 1 </label>
              <%= f.text_field :contact_num_first %>
            </div>
            <div class="form-item">
              <label><span class="req">*</span>Contcat Number 2 </label>
              <%= f.text_field :contact_num_second %>
            </div>
            <div class="form-item">
              <label><span class="req">*</span>Email</label>
              <%= f.email_field :email, :autofocus => true  %>
            </div>
            <span class="clr"></span>
          </div>
          <div class="registration-form-box">
          	<div class="form-item">
              <label>Address 1 </label>
              <%= f.text_field :address_1 %>
            </div>
            <div class="form-item">
              <label>Address 2 </label>
              <%= f.text_field :address_2 %>
            </div>
            <div class="form-item">
              <label>City</label>
              <%= f.text_field :city %>
            </div>
            <span class="clr"></span>
          </div>
          <div class="registration-form-box">
          	<div class="form-item">
              <label>State</label>
              <%= f.text_field :state %>
            </div>
            <div class="form-item">
              <label>Zip/Postal Code </label>
              <%= f.text_field :city %>
            </div>
            <div class="form-item">
              <label>Country</label>
              <%= f.text_field :country %>
            </div>
            <span class="clr"></span>
          </div>
          <div class="registration-form-box">
          	<div class="form-item">
              <label>Business Segment/Type </label>
              <%= f.text_field :business_type %>
            </div>
            <div class="form-item">
              <label>Type of User </label>
              <%= f.text_field :user_type %>
            </div>
            <div class="form-item">
              <label>How did you here about NMI</label>
              <%= f.text_field :hear_from %>
            </div>
            <span class="clr"></span>
          </div>
          <div class="registration-form-box">
          	<div class="form-item">
              <label>Password</label>
              <%= f.password_field :password, :autocomplete => "off" %>
            </div>
            <div class="form-item">
              <label>Confirm Password</label>
              <%= f.password_field :password_confirmation %>
            </div>
            <div class="form-item">
              <label>Security Code<br>
              </label>
              <%= f.text_field :security_code %>
            </div>
            <span class="clr"></span>
          </div>
          <div class="form-bottom-check-box">
	        	<div class="form-bottom-check-le">
	            <%= f.check_box :subscribe_to_updates %>
	            <span>LinnkedinI would like to recieve the latest news and offers from NMI.</span>
	          </div>
            <div class="form-bottom-check-ri">
            	<%= f.check_box :toc %>
              <span>I have read and agree to the terms of use and privacy policy.</span>
            </div>
            <span class="clr"></span>
          </div>
          <input type="submit" value="Submit" title="Submit" class="buttons form-submit-btn" />
        <% end %>
      </div>
      <div class="footer-add">
        <%= image_tag "footer-add.jpg", title: "add" %>
      </div>
    </div><!--/span-->
  </div><!--/row-->
</div><!--/.fluid-container-->